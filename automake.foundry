[package]
name = "automake"
description = "Automatic Makefile generator"
homepage = "https://www.gnu.org/software/automake/"
license = "GPL-2.0"

[source]
type = "git"
url = "https://git.savannah.gnu.org/git/automake.git"
tag = "v1.17"

[build]
system = "autotools"
jobs = "auto"
inline = """
./bootstrap
./configure --prefix=${FOUNDRY_PREFIX}
make -j${FOUNDRY_JOBS}
make install
"""

[deps]
autoconf = "*"

[deps.build-only]
perl = "*"
