[package]
name = "glibc"
description = "GNU C Library"
homepage = "https://www.gnu.org/software/libc/"
license = "LGPL-2.1"

[source]
type = "git"
url = "https://sourceware.org/git/glibc.git"
tag = "glibc-2.40"

[build]
system = "autotools"
jobs = "auto"
inline = """
mkdir build && cd build
../configure --prefix=${FOUNDRY_PREFIX} \
  --disable-werror \
  --enable-kernel=5.15
make -j${FOUNDRY_JOBS}
make install
"""

[deps]
linux-headers = "*"

[deps.build-only]
gcc = "*"
binutils = "*"
